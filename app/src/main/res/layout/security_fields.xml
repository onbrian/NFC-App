<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:padding="5dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/security_border">

    <TextView
        android:id="@+id/password_byte_forms_title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"/>

    <LinearLayout
        android:id="@+id/password_byte_forms"
        android:gravity="center"
        android:layout_below="@id/password_byte_forms_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/password_byte_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00"
            android:maxLength="2"/>

        <EditText
            android:id="@+id/password_byte_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00"
            android:maxLength="2"/>

        <EditText
            android:id="@+id/password_byte_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00"
            android:maxLength="2"/>

        <EditText
            android:id="@+id/password_byte_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00"
            android:maxLength="2"/>
    </LinearLayout>

    <TextView
        android:id="@+id/which_password_radio_title"
        android:gravity="center"
        android:layout_below="@id/password_byte_forms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password Number"/>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/which_password_radio"
        android:checkedButton="@+id/password_1"
        android:layout_below="@id/which_password_radio_title">

        <RadioButton android:id="@+id/password_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"/>

        <RadioButton android:id="@+id/password_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"/>

        <RadioButton android:id="@+id/password_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"/>
    </RadioGroup>
</RelativeLayout>